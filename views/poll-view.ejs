<% if (alert.length >= 1) { %>
    <div class="alert alert-success alert-dismissible" role="alert" style="margin: auto; width: 550px; padding: 10px; border-radius: 10px; text-align: center;">
    <div><%= alert %></div>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% } %>

<div id="card" class="card" style="width: 350px;">
    <% if (suspended === true) { %>
        <div class="suspended">
            <div class="suspended-red" style="background-color: red; border-radius: 10px; padding: 5px; margin:5px;">
                <h3 class="text-center text-light">Suspended</h3>
            </div>
            <p class="text-center text-dark">This Poll is suspended for violating Ignotum Rules. Waiting for admin action.</p>
        </div>
    <% } %>
    <div id="questions-box">
        <h1><%= question %></h1>
    </div>
    <form action="/privateAPI/polls/respond/<%= id %>" method="post">
        <div class="grid-container">
            <% options.forEach(element => { %>
                <div class="mb-3 form-check grid-item">
                    <input type="checkbox" class="form-check-input" id="<%= element %>" name="<%= element %>" for="<%= element %>">
                    <label class="form-check-label" for="<%= element %>" name="<%= element %>"><%= element %></label>
                </div>
            <% }) %>
        </div>
        
        <% if (logged == true) { %>
         <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id=" name" name=" name" for=" name">
            <label class="form-check-label" for=" name" name=" name">Show my name</label>
        </div>
        <% } %>
        <input type="submit" class="btn btn-primary" value="Send">
    </form>
</div>



<style>
    body {
        background-color: #18191A
    }

    #card #questions-box {
        size: 1px;
        color: #18191A;
        text-align: center;
        border: 5px solid #ccc;
        border-radius: 5px;
        background-color: gray;
        width: auto;
    }

    #card {
        margin: auto;
        width: 500px;
        padding: 50px;
        border: 5px solid #ccc;
        border-radius: 5px;
        background-color: #f2f2f2;
    }

    .grid-container {
        display: grid;
        grid-template-columns: auto auto auto;
    }
    .grid-item {
        font-size: 20px;
    }
</style>